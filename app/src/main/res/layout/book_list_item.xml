<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/book_item_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/coverImageView"
        android:layout_width="@dimen/books_cover_image_size"
        android:layout_height="@dimen/books_cover_image_size"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/BookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/short_padding"
        tools:text="A very good title" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="A very good Author" />
</LinearLayout>
